- $background_image = get_sub_field('background_image') ? get_sub_field('background_image')['url'] : ''
- $heading = get_sub_field('heading')

section.flex-block.flex-testimonial-slider.hrz-padding(style="background-image: url('<?= $background_image;?>');")
	.container.content-block
		- if($heading) :
			h2: - echo $heading
		- endif
		- if (have_rows('testimonials')) :
			.swiper.testimonial-slider
				.swiper-wrapper
					- while (have_rows('testimonials')) : the_row()
						.swiper-slide
							h4: - echo get_sub_field('testimonial')
							p: - echo get_sub_field('testimonial_name')
					- endwhile
				.swiper-button-prev
				.swiper-button-next
				.swiper-pagination
		- endif