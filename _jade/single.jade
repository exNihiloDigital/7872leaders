- get_header()

article#single.hrz-padding
    .container-lg 
        aside 
            p: strong: - echo get_the_date()
        section 
            - include('includes/share-buttons.php')
    .container-lg
        - if (have_posts()) :
            - while (have_posts()) : the_post()
                - the_content()
            - endwhile

            - wp_reset_postdata()
        - else :
            - include('includes/loop_missing.php')
        - endif

- get_footer()